            padding-left: 50%;
            position: relative;
            border-bottom: 1px solid #374151;
        }

        .returns-table td:last-child {
            border-bottom: none;
        }

        .returns-table td::before {
            content: attr(data-label);
            position: absolute;
            left: 6px;
            width: 45%;
            padding-right: 10px;
            white-space: nowrap;
            text-align: left;
            font-weight: bold;
        }

        .truncate {
            max-width: none;
