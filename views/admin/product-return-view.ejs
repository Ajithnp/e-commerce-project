
<%- include('../partials/admin/header') %>
<div class="product-return-view-container">
    <div class="page-header">
        <h1 class="page-title">Return Details - RET001</h1>
        <a href="/api/v1/admin/order/item/return" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Returns
        </a>
    </div>

    <div class="return-details-container">
        <div class="return-info-section">
            <h2 class="section-title">Return Information</h2>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Return ID:</span>
                    <span class="info-value"><%= returnRequest._id %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Order ID:</span>
                    <span class="info-value"><%= returnRequest.order._id %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Status:</span>
                    <span class="info-value"><span class="status-badge pending"><%= returnRequest.returnProductStatus %></span></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Date Requested:</span>
                    <span class="info-value"><%= returnRequest.productReturnDate.getFullYear() + '-' + String(returnRequest.productReturnDate.getMonth() + 1).padStart(2, '0') + '-' + String(returnRequest.productReturnDate.getDate()).padStart(2, '0') %></span>
                </div>
            </div>
        </div>

        <div class="customer-info-section">
            <h2 class="section-title">Customer Information</h2>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Name:</span>
                    <span class="info-value"><%= returnRequest.order.userId.name %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email:</span>
                    <span class="info-value"><%= returnRequest.order.userId.email %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Phone:</span>
                    <span class="info-value">+91 <%= returnRequest.order.userId.phone %></span>
                </div>
            </div>
        </div>

        <div class="product-info-section">
            <h2 class="section-title">Product Information</h2>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Product Name:</span>
                    <span class="info-value"><%= returnRequest.product.productName %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Color:</span>
                    <span class="info-value"><%= returnRequest.productColor %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Price:</span>
                    <span class="info-value">â‚¹<%= returnRequest.product.salePrice %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Quantity:</span>
                    <span class="info-value"><%= returnRequest.productQuantity %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Total Amount:</span>
                    <span class="info-value" id="total-amount"></span>
                </div>
            </div>
        </div>

        <div class="return-reason-section">
            <h2 class="section-title">Return Reason</h2>
            <div class="info-grid">
                <div class="info-item full-width">
                    <span class="info-label">Reason:</span>
                    <span class="info-value"><%= returnRequest.productReturnReason %></span>
                </div>
                <div class="info-item full-width">
                    <span class="info-label">Customer Comments:</span>
                    <span class="info-value">.</span>
                </div>
            </div>
        </div>

      
    </div>
</div>

<style>
    .product-return-view-container {
        padding: 20px;
        background-color: #1f2937;
        color: #E5E7EB;
        min-height: 100vh;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .page-title {
        font-size: 24px;
        color: white;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        background-color: #374151;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        transition: background-color 0.2s;
    }

    .back-btn:hover {
        background-color: #4B5563;
    }

    .back-btn i {
        margin-right: 8px;
    }

    .return-details-container {
        background-color: #111827;
        border-radius: 8px;
        padding: 24px;
    }

    .section-title {
        font-size: 18px;
        color: white;
        margin-top: 16px;
        margin-bottom: 16px;
        border-bottom: 1px solid #374151;
        padding-bottom: 8px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-item.full-width {
        grid-column: 1 / -1;
    }

    .info-label {
        font-size: 14px;
        color: #9CA3AF;
        margin-bottom: 4px;
    }

    .info-value {
        font-size: 16px;
        color: #fd8a14
    }

    .status-badge {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }

    .status-badge.pending {
        background-color: #FBBF24;
        color: #92400E;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        margin-bottom: 16px;
    }

    .action-btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        transition: opacity 0.2s;
    }

    .approve-btn {
        background-color: #34D399;
        color: white;
    }

    .reject-btn {
        background-color: #F87171;
        color: white;
    }

    .save-btn {
        background-color: #3B82F6;
        color: white;
    }

    .admin-notes {
        margin-top: 16px;
    }

    .admin-notes h3 {
        font-size: 16px;
        color: white;
        margin-bottom: 8px;
    }

    #admin-notes-input {
        width: 100%;
        height: 100px;
        padding: 8px;
        background-color: #374151;
        border: 1px solid #4B5563;
        border-radius: 4px;
        color: white;
        font-size: 14px;
        resize: vertical;
        margin-bottom: 8px;
    }

    @media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-btn {
            width: 100%;
        }
    }
</style>

