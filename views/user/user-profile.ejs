<%- include('../partials/user/header2') %>  

<style>
    .check-group{
        display: flex;
        gap: 10px;
    }
    .buttons{
        display: flex;
        justify-content: space-between;
    }
</style>

<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">My Account<span>Shop</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/user/store">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">My Account</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="dashboard">
            <div class="container">
                <div class="row">
                    <aside class="col-md-4 col-lg-3">
                        <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" id="tab-dashboard-link" href="/beats/userProfile">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-orders-link" href="/beats/user/orders">Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-downloads-link" href="/beats/user/accountDetails" >Account Details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-address-link" href="/beats/user/showAddress" >Adresses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-wallet-link" href="/beats/user/wallet" >Wallet</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="logout-button" href="/user/logout">Sign Out</a>
                            </li>
                            
                            
                            <!-- <li class="nav-item">
                                <a class="nav-link" id="tab-account-add-link" data-toggle="tab" href="#tab-account-add" role="tab" aria-controls="tab-account-add" aria-selected="false">Add Address</a>

                            </li> -->
                        </ul>
                    </aside><!-- End .col-lg-3 -->

                    <div class="col-md-8 col-lg-9">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">
                                <p>Hello <span class="font-weight-normal text-dark"><%=user.name%></span> <span class="font-weight-normal text-dark"></span> <a href="#"></a>
                                <br>
                                From your account dashboard you can view your <a href="#tab-orders" class="tab-trigger-link link-underline">recent orders</a>, manage your <a href="#tab-address" class="tab-trigger-link">shipping and billing addresses</a>, and <a href="#tab-account" class="tab-trigger-link">edit your password and account details</a>.</p>
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                <p>No order has been made yet.</p>
                                <a href="category.html" class="btn btn-outline-primary-2"><span>GO SHOP</span><i class="icon-long-arrow-right"></i></a>
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-downloads" role="tabpanel" aria-labelledby="tab-downloads-link">
                                <p>No downloads available yet.</p>
                                <a href="category.html" class="btn btn-outline-primary-2"><span>GO SHOP</span><i class="icon-long-arrow-right"></i></a>
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-address" role="tabpanel" aria-labelledby="tab-address-link">
                                <p>The following addresses will be used on the checkout page by default.</p>
                                <div>
                                    <a class="nav-link"  id="tab-account-add-link" data-toggle="tab" href="#tab-account-add" role="tab" aria-controls="tab-account-add" aria-selected="false">
                                    <button type="button" class="btn btn-outline-primary">+add address</button>

                                    </a>
                                    
                                    <!-- <button type="button" id="tab-account-add-link" role="tab" aria-controls="tab-account" aria-selected="false" class="btn btn-outline-primary">+add address</button> -->
                                </div>

                              
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                                <form id="userProfile" >
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label>Name *</label>
                                            <input type="text" id="name2" name="name" value="<%= user.name %>" class="form-control">
                                            <p id="name-error" class="error-message"></p>
                                        </div><!-- End .col-sm-6 -->

                                        <!-- <div class="col-sm-6">
                                            <label>Last Name *</label>
                                            <input type="text" class="form-control" required>
                                        </div> -->
                                    </div><!-- End .row -->

                                    <label>Email *</label>
                                    <input type="email" class="form-control" value="<%= user.email %>" disabled required>
                                    <small class="form-text">This will be how your name will be displayed in the account section and in reviews</small>

                                    <label>Phone No *</label>
                                    <input type="tel" id="phone2" name="phone" class="form-control" value="<%= user.phone %>">
                                    <p id="phone-error" class="error-message"></p>

                                    <label>Current password </label>
                                    <input type="password" id="password2" name="password" class="form-control">
                                    <p id="password-error" class="error-message"></p>

                                    <label>New password </label>
                                    <input type="password" id="new-pass" name="newPassword" class="form-control">
                                    <p id="new-password-error" class="error-message"></p>

                                    <label>Confirm new password</label>
                                    <input type="password" id="confirm-password2" name="confirmPassword" class="form-control mb-2">
                                    <p id="confirm-password-error" class="error-message"></p>

                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>SAVE CHANGES</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                    <p id="general-error" class="error-message"></p>
                                </form>
                            </div><!-- .End .tab-pane -->

                            <!-- Adresss tab-->

                           


                            <!--Account Edit-->
                          

                        </div>
                    </div><!-- End .col-lg-9 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .dashboard -->
    </div><!-- End .page-content -->
</main><!-- End .main -->




<%- include('../partials/user/footer') %>  








