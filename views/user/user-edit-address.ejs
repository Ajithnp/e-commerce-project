    }
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }
    label {
        display: block;
        margin-bottom: 5px;
        
    }
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -10px;
        margin-left: -10px;
    }
    .col-sm-6 {
        flex: 0 0 50%;
        max-width: 50%;
        padding-right: 10px;
        padding-left: 10px;
        box-sizing: border-box;
    }
    .custom-control {
        margin-bottom: 15px;
    }
    .check-group {
        display: flex;
        gap: 15px;
    }
    .check-group label {
        display: inline-flex;
        align-items: center;
        cursor: pointer;
    }
    .check-group input[type="radio"] {
        margin-right: 5px;
    }
    .btn {
