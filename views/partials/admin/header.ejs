    <style>
        :root {
            --bg-primary: #1a202c;
            --bg-secondary: #2d3748;
            --text-primary: #ffffff;
            --text-secondary: #a0aec0;
            --accent-color: #6b46c1;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: var(--bg-secondary);
            padding: 1rem;
            display: flex;
            flex-direction: column;
        }

        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .logo .material-icons {
            margin-right: 0.5rem;
            color: #e53e3e;
        }

        .nav-table {
            display: table;
            width: 100%;
        }

        .nav-item {
            display: table-row;
            color: var(--text-primary);
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-item .material-icons,
        .nav-item span {
            display: table-cell;
            padding: 0.75rem 0.5rem;
            vertical-align: middle;
        }

        .nav-item .material-icons {
            width: 24px;
        }

        .main-content {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .search-bar {
            position: relative;
        }

        .search-bar input {
            padding: 0.5rem 0.5rem 0.5rem 2rem;
            background-color: var(--bg-secondary);
            border: 1px solid #4a5568;
            color: var(--text-primary);
            border-radius: 4px;
        }

        .search-bar .material-icons {
            position: absolute;
            left: 0.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-info .material-icons {
            margin-left: 1rem;
        }

        .admin-dropdown {
            position: relative;
            display: inline-block;
        }

        .admin-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: var(--bg-secondary);
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 4px;
        }

        .admin-dropdown-content a {
            color: var(--text-primary);
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .admin-dropdown-content a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .admin-dropdown:hover .admin-dropdown-content {
            display: block;
        }

        .admin-dropdown-btn {
            background-color: transparent;
            color: var(--text-primary);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                order: 2;
            }

            .main-content {
                order: 1;
            }

            .header {
                flex-direction: column;
                align-items: stretch;
            }

            .search-bar {
                margin-bottom: 1rem;
            }

            .admin-dropdown-content {
                position: static;
                display: none;
            }

            .admin-dropdown:hover .admin-dropdown-content {
                display: block;
            }
        }
        

        .swal-overlay {
            background-color: rgba(0, 0, 0, 0.8); /* Darker background for overlay */
        }
        /* Modal Style */
        .swal-modal {
            background-color: #2C2F33; /* Dark background for modal */
            color: #ffffff; /* White text color */
            border-radius: 15px; /* Rounded corners */
            padding: 30px; /* More padding for better layout */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Stronger shadow effect */
            transition: transform 0.3s; /* Smooth transformation effect */
        }
        /* Title Style */
        .swal-title {
            font-size: 1.8rem; /* Larger title font size */
            margin-bottom: 10px; /* Spacing below the title */
            font-weight: bold; /* Bold title */
        }
        /* Text Style */
        .swal-text {
            font-size: 1.1rem; /* Slightly larger text */
            margin-bottom: 20px; /* Spacing below text */
        }
        /* Button Style */
        .swal-button {
            background-color: #FFC107; /* Bright button color */
            color: #000; /* Button text color */
            border: none; /* No border */
            padding: 12px 20px; /* Padding inside button */
            border-radius: 8px; /* Rounded button corners */
            font-weight: bold; /* Bold button text */
            cursor: pointer; /* Pointer on hover */
            transition: background-color 0.3s; /* Smooth color transition */
        }
        /* Button Hover Effect */
        .swal-button:hover {
            background-color: #FFD54F; /* Lighter shade on hover */
        }
        /* Cancel Button Style */
        .swal-button--cancel {
            background-color: #F44336; /* Red for cancel button */
        }
        .swal-button--cancel:hover {
            background-color: #EF5350; /* Lighter shade on hover */
        }
